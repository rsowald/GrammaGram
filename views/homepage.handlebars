<!-- Loop over each object in the posts array -->

{{#each posts as |post| }}



<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div class="card-content">
        <h4> {{post.title}} </h4>
      </div>

      <div class="card-content">
        <p>{{project.text_content}}</p>
      </div>

      <div class="card-content">
        <h1>Posted by {{post.user.name}} on {{format_date post.createdAt}}</h1>
        <h1>{{post.text}}</h1>
      </div>
    </div>
  </div>




  <div class="col-md-7">
    <p>
      {{post.text_content}}
    </p>
  </div>
</div>
{{/each}}