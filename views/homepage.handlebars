<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}



<div class="row">
  <div class="col s12 m6">
    <div class="card blue lighten-4">
      <div class="card-content">

        <span class="card-title">
          <h4> {{post.title}} </h4>
        </span>
        <p>{{post.text}}</p>



        {{#if post.hasImage}}
        <img src={{post.imageLink}} class="img-fluid" style="max-height: 200px; width: auto" alt="">
        {{/if}}

      </div>

      <div class="card-action">
        <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
      </div>

    </div>
  </div>


  {{/each}}